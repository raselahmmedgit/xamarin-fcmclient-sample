<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFCMAPP.MainPage" Title="Home Page">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Xamarin Chat Apps" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>
        
        <Button FontSize="16" Padding="10,20" Margin="20,5,20,5"  Text="Init Fcm And RapidPro" Clicked="BtnInit_Clicked" />
        <Button FontSize="16" Padding="10,20" Margin="20,5,20,5"  Text="Send Init RapidPro" Clicked="BtnRapidProInit_Clicked" />
        <Button FontSize="16" Padding="10,20" Margin="20,5,20,5"  Text="Send QuickReplies RapidPro" Clicked="BtnRapidProQuickReplies_Clicked" />
        <Button FontSize="16" Padding="10,20" Margin="20,5,20,5"  Text="Send End RapidPro" Clicked="BtnRapidProEnd_Clicked" />

        <Button FontSize="16" Padding="10,20" Margin="20,5,20,5"  Text="Go Chat Page" Clicked="BtnGoChatPage_Clicked" />
        
        <Label x:Name="LblMessage" Text="" FontSize="16" Padding="20,10,20,10"/>

    </StackLayout>

</ContentPage>
